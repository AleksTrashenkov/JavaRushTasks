package com.javarush.task.pro.task06.task0606;

/* 
Рассмотрим пример применения методов с передачей параметров, на примере создания и вывода двумерного массива
*/

import java.util.Arrays;
import java.util.Scanner;

class Solution
{

    public static void main(String[] args) {
        parametersArray();
    }


    public static void parametersArray () {
        int[][] data;
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите число: ");
        int n = scan.nextInt();
        System.out.println("Ведите второве число: ");
        int a = scan.nextInt();
        data = new int[n][a];
        initialArray(data);
    }

    public static void initialArray(int[][] data) {
        Scanner scan = new Scanner(System.in);
        for (int i = 0; i < data.length; i++) {
            for (int j = 0; j < data[i].length; j++) {
                System.out.println("Наполянем массив: ");
                data[i][j] = scan.nextInt();
            }
        }
        String str = Arrays.deepToString(data);
        System.out.println(str);
    }
}
